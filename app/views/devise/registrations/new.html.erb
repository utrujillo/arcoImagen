<div class="alerts">
  <%= devise_error_messages! %>
</div>

<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'login' } do |f| %>
  
<fieldset>
  
  <legend class="legend">Registro</legend>

  <div class="input">
    <%= f.email_field :email, placeholder: 'E-mail', autofocus: true, required: true %>
    <span><i class="fa fa-envelope-o"></i></span>
  </div>

  <div class="input">
    <%= f.password_field :password, placeholder: 'Contraseña', required: true %>
    <span><i class="fa fa-lock"></i></span>
  </div>

  <div class="input">
    <%= f.password_field :password_confirmation, placeholder: 'Contraseña', required: true, autocomplete: "off" %>
    <span><i class="fa fa-lock"></i></span>
  </div>

  <div class="input">
    <%= f.text_field :nombre, placeholder: 'Nombre', required: true %>
    <span><i class="fa fa-user"></i></span>
  </div>

  <div class="input">
    <%= f.text_field :apellidos, placeholder: 'Apellidos', required: true %>
    <span><i class="fa fa-user"></i></span>
  </div>

  <button type="submit" class="submit"><i class="fa fa-long-arrow-right"></i></button>
  
</fieldset>
<% end %>

<div class="mx-auto mt-4 another-links">
  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
